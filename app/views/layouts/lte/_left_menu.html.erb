<section class="sidebar">
  <div class="user-panel">
    <div class="pull-left image">
      <img src="<%= image_path('favicon.png')%>" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
      <p><%= current_user.email.split('@')[0] %></p>
      <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
    </div>
  </div>
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Search...">
      <span class="input-group-btn">
        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
        </button>
      </span>
    </div>
  </form>
  <ul class="sidebar-menu">
    <li class="header">交易中心</li>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'index'%>">
      <a href="<%= trade_block_ticker_path %>" target="_self">
        <i class="fa fa-dashboard"></i> <span> 区块趋势</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'blocks' %>">
      <a href="<%= trade_blocks_path %>" target="_self">
        <i class="fa fa-btc"></i> <span> 区块货币</span>
      </a>
    </li>
    <% if controller_name=='block_tickers' %>
    <li class="treeview <%= 'active' if controller_name=='block_tickers' %>">
      <a href="<%= trade_block_block_tickers_path(params[:block_id]) %>" target="_self">
        <i class="fa fa-area-chart"></i> <span> 价格行情</span>
      </a>
    </li>
    <% end %>
    <li class="treeview <%= 'active' if controller_name=='focus_blocks' %>">
      <a href="<%= trade_focus_blocks_path %>" target="_self">
        <i class="fa fa-heartbeat"></i> <span>  关注区块</span>
      </a>
    </li>
    <% if controller_name == 'smart_orders' %>
      <li class="treeview <%= 'active' if controller_name =='smart_orders' %>">
        <a href="<%= trade_focus_block_smart_orders_path(params[:focus_block_id]) %>" target="_self">
          <i class="fa fa-exchange"></i> <span>  智能空单</span>
        </a>
      </li>
    <% end %>
    <li class="treeview <%= 'active' if controller_name=='pending_orders' %>">
      <a href="<%= trade_pending_orders_path %>" target="_self">
        <i class="fa fa-cny"></i> <span> 买卖挂单</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name=='balances' %>">
      <a href="<%= trade_balances_path %>" target="_self">
        <i class="fa fa-credit-card"></i> <span> 区块余额</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name =='block_parities'%>">
      <a href="<%= trade_block_parities_path %>" target="_self">
        <i class="fa fa-balance-scale"></i> <span> 区块差价</span>
      </a>
    </li>
    <% if controller_name == 'partity_sources' %>
      <li class="treeview <%= 'active' if controller_name =='partity_sources' %>">
        <a href="<%= trade_block_parity_partity_sources_path(params[:block_parity_id]) %>" target="_self">
          <i class="fa fa-gift"></i> <span> 价格来源</span>
        </a>
      </li>
    <% end %>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'token' %>">
      <a href="<%= trade_token_ticker_path %>" target="_self">
        <i class="fa fa-bar-chart"></i> <span> 价格趋势</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name =='quotes'%>">
      <a href="<%= trade_quotes_path %>" target="_self">
        <i class="fa fa-snowflake-o"></i> <span> 买卖资讯</span>
      </a>
    </li>
  </ul>
</section>
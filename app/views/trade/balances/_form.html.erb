<%= form_for(['trade',@block,@ticker]) do |f| %>
<div class="box-body">
  <div class="col-md-5">
    <div class="form-group has-error">
      <label>当前价</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-cny"></i>
        </div>
        <%= f.text_field :last_price, class:'form-control', placeholder:'（必填* 区块链中文简称）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>买一价</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-won"></i>
        </div>
        <%= f.text_field :buy_price, class:'form-control', placeholder:'（必填* 区块链英文简称）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>卖一价</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-usd"></i>
        </div>
        <%= f.text_field :sell_price, class:'form-control', placeholder:'（必填* 区块链英文简称）' %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <button type="submit" class="btn bg-maroon btn-flat" style="width: 120px">提交</button>
      <a href="<%= request.referrer %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
    </div>
  </div>
</div>
<% end %>
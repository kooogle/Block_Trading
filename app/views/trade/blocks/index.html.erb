<%= content_for(:title,  '区块链列表 | BLOCK') %>
<section class="content-header">
  <h1>
    区块链 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-btc"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-btc"></i> 区块链</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_trade_block_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加货币</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">中文</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">简称</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">价格</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;width: 240px">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @blocks.each do |item| %>
              <tr style="text-align: center">
                <td>
                  <label class="btn bg-blue btn-flat" style="font-size: 16px">
                    <i class="fa fa-flag"></i>
                    <%= item.chinese %>
                  </label>
                </td>
                <td>
                  <label class="btn bg-black btn-flat" style="font-size: 16px">
                    <i class="fa fa-btc"></i>
                    <%= item.english %>
                  </label>
                </td>
                <td>
                  <label class="btn bg-black btn-flat" style="font-size: 16px">
                    <i class="fa fa-cny"></i>
                    <%= item.tickers.last.try(:last_price) %>
                  </label>
                </td>
                <td>
                  <a href="<%= trade_block_block_tickers_path(item) %>" class="btn bg-green btn-flat">
                    <i class="fa fa-area-chart"></i>
                    行情
                  </a>
                  <a href="<%= edit_trade_block_path(item) %>" class="btn bg-orange btn-flat">
                    <i class="glyphicon glyphicon-edit"></i>
                    编辑
                  </a>
                  <a href="<%= trade_block_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除该条轮播吗？">
                    <i class="glyphicon glyphicon-trash"></i>
                    删除
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：「<%= @blocks.count %>」种类</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
          <%= will_paginate @blocks, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
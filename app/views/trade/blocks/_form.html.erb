<%= form_for(['trade',@block]) do |f| %>
<div class="box-body">
  <div class="col-md-5">
    <div class="form-group has-error">
      <label>中文名称</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-flag"></i>
        </div>
        <%= f.text_field :chinese, class:'form-control', placeholder:model_errors(@block,'chinese') || '（必填* 区块链中文简称）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>英文名称</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-btc"></i>
        </div>
        <%= f.text_field :english, class:'form-control', placeholder:model_errors(@block,'english') || '（必填* 区块链英文简称）' %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <button type="submit" class="btn bg-maroon btn-flat" style="width: 120px">提交</button>
      <a href="<%= trade_blocks_path %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
    </div>
  </div>
</div>
<% end %>
<%= form_for(['trade',@block,@source]) do |f| %>
<div class="box-body">
  <div class="col-md-5">
    <div class="form-group has-error">
      <label>交易平台</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-bank"></i>
        </div>
        <%= f.hidden_field :block_parity_id, value:@block.id %>
        <%= f.text_field :platform, class:'form-control', placeholder:'（必填* 来源交易平台名称 如：sosobtc）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>来源链接</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-won"></i>
        </div>
        <%= f.text_field :ticker_url, class:'form-control', placeholder:'（必填* 价格来源链接 ）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>价格锚点</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-anchor"></i>
        </div>
        <%= f.text_field :css_anchor, class:'form-control', placeholder:'（必填* 页面样式价格锚点 如：div#price）' %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <button type="submit" class="btn bg-maroon btn-flat" style="width: 120px">提交</button>
      <a href="<%= request.referrer %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
    </div>
  </div>
</div>
<% end %>